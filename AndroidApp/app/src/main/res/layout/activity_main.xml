<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffa7a793">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="141dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="#ffffffff">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.75">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/imgStar1"
                        android:src="@drawable/ic_launcher" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#ffffffff">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/titleStar1"
                        android:layout_marginTop="3dp"
                        android:textColor="#ff155168"
                        android:textStyle="bold"
                        android:textSize="6pt" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:background="#ffffffff">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.75">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imgStar2"
                        android:src="@drawable/ic_launcher" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/titleStar2"
                        android:textStyle="bold"
                        android:textColor="#ff155168"
                        android:background="#ffffffff"
                        android:textSize="6pt" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="258dp"
            android:id="@+id/listPrincipalNews"
            android:layout_weight="0.82" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:layout_marginTop="5dp">

            <Button
                android:layout_width="85dp"
                android:layout_height="55dp"
                android:id="@+id/button"
                android:layout_below="@+id/button2"
                android:layout_toStartOf="@+id/button3"
                android:background="@drawable/crear_noticia"
                android:layout_marginLeft="65dp" />

            <Button
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:id="@+id/button2"
                android:layout_toEndOf="@+id/button3"
                android:layout_above="@+id/button3"
                android:background="@drawable/voto"
                android:layout_marginLeft="50dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

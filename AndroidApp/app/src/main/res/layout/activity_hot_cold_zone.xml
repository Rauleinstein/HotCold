<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.com.hotcold.HotColdZoneActivity"
    android:id="@+id/full">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="370dp"
            android:weightSum="1"
            android:layout_weight="1"
            android:id="@+id/layoutContainer"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/layoutNews">

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/listImgPreview"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_launcher"
                    android:layout_alignStart="@+id/textTitleNew"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.22" />

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Title"
                    android:id="@+id/textTitleNew"
                    android:layout_below="@+id/listImgPreview"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.05" />

                <TextView
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Content"
                    android:id="@+id/textContentNew"
                    android:layout_centerVertical="true"
                    android:layout_alignEnd="@+id/textTitleNew"
                    android:layout_weight="0.47" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.39">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anterior"
                android:id="@+id/button5"
                android:clickable="false"
                android:enabled="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siguiente"
                android:id="@+id/button6" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

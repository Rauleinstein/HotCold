<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.com.hotcold.hotcold.com.androidapp.activities.SendNewsForm">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/textNew"
        android:weightSum="1">

        <ImageView
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:id="@+id/imgPreview"
            android:layout_marginTop="68dp"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/sendNewsButton"
            android:layout_gravity="top"
            android:layout_weight="0.33" />

        <ImageView
            android:layout_width="68dp"
            android:layout_height="179dp"
            android:id="@+id/videoPreview"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="top"
            android:layout_weight="0.54" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/sendNewsButton"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/textNew"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Titular" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contentNewsText"
        android:layout_below="@+id/textNew"
        android:layout_alignEnd="@+id/sendNewsButton"
        android:layout_marginTop="28dp"
        android:layout_alignStart="@+id/textNew"
        android:hint="Contenido de la noticia" />

</RelativeLayout>
